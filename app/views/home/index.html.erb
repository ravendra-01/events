<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4 mx-auto">
      <div class='card mt-5'>
        <div class='card-header text-center'>
          <h5 class='text-primary'>Event</h5>
        </div>
        <div class='card-body' style='min-height:100px;'>
          <div class='row mt-3'>
            <div class='col-lg-6 mb-2'>
              <div class='d-flex justify-content-center'>
                <%= link_to "Event A", "#", class: 'btn btn-primary' %>
              </div>
            </div>
            <div class='col-lg-6'>
              <div class='d-flex justify-content-center'>
                <%= link_to "Event B", "#", class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>
        <div class='card-footer'>
          <div class='row'>
            <div class='col-lg-6'>
              <small class='text-muted'><%= current_user.email %></small>
            </div>
            <div class='col-lg-6 text-end'>
              <small><%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to sign out?"} %></small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>